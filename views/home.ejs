<head>
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Marcellus&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x" crossorigin="anonymous">
    <meta charset="UTF-8">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Odibee+Sans&family=Roboto:wght@100&display=swap" rel="stylesheet">
    <style>
   

        html,
        body {
            height: 100%;
            background-color: #a8dadc;
        }
        
        * {
            font-weight: bold;
            padding: 0px;
            margin: 0px
        }
        
        .card {
            
            border-radius: 50px;
            background-color: #ffd7ba;
            font-family: 'Marcellus', serif;
            box-shadow: 5px  5px white;
        }
        
        #heading {
            font-size: 55px;
            color: #2b304d
        }
        
        .temp {
            place-items: center
        }
        
        .temp-details>p>span
        {
          
            font-size:15px
        }
        
        </style>
</head>
<div style="text-align: center;" class="mt-5">
    <h3>Weather App</h3>
</div>

<form class="col-12 col-md-4 col-sm-12 col-xs-12 px-3"  style="margin:auto; margin-bottom: 5%; padding-top:4%;" method="POST" action="/weather" enctype="application/x-www-form-urlencoded">
    <input type="text" class="form-control" id="city"  placeholder="Enter City name here" name="city">
    
    <button type="submit" style="background-color: #ffd7ba; width: 30%; box-shadow: 1px 1px white; margin-left:35%; font-weight: bold;" class="btn  mt-2">Submit</button>
</form>

<% if (error!=undefined) { %>
 <div style="text-align: center;">
     <%= error %> 
 </div>
<% } %>

<% if (matter!=undefined) { %>
    <div class="container-fluid mt-0" style="font-weight: bold;">
        <div class="row justify-content-center">
            <div class="col-12 col-md-4 col-sm-12 col-xs-12">
                <div class="card p-4">
                    <div class="d-flex">
                        <h6 class="flex-grow-1" style="font-weight: bold;"><%= matter.city %> </h6>
                        <h6 style="font-weight: bold;"><%= matter.time %> </h6>
                    </div>
                    <div class="d-flex flex-column temp mt-5 mb-3">
                        <h1 class="mb-0 font-weight-bold" id="heading"> <%= matter.temprature %>&#8451;  </h1> <span class="small"><%= matter.mainCondition %></span>
                    </div>
                    <div class="d-flex">
                        <div class="temp-details flex-grow-1">
                            <p class="my-1"> <span>Wind Speed-</span> <span> <%= matter.windSpeed %> m/sec</span> </p>
                            <p class="my-2"> <span>Humidity-</span> <span><%= matter.humidity %> hpa  </span> </p>
                        </div>
                        <div> <img src="http://openweathermap.org/img/wn/<%= matter.icon %>.png" width="100px" alt=""> </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
<% } %>